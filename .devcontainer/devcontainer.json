{
	"name": "Alpine",
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-lazygit:0": {},
		"ghcr.io/devcontainers-extra/features/mise:1": {},
		"ghcr.io/davzucky/devcontainers-features-wolfi/bash:1": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-docker-outside-of-docker:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-bun:0": {}
	},
	"postCreateCommand": [
		"git remote set-url origin ssh://git@codeberg.org/strawmelonjuice/lumina.git",
		"mise trust",
		// Unusing bun since it'll fail in alpine
		"mise unuse bun",
		"git update-index --skip-worktree mise.toml"
	],
	"forwardPorts": [
		8085
	],
	"postStartCommand": "mise install"
}